  <Target Name="CopyDependenciesToLib" AfterTargets="Build">
    <ItemGroup>
      <DllsToCopy Include="$(OutDir)ClosedXML.dll" Condition="Exists('$(OutDir)ClosedXML.dll')" />
      <DllsToCopy Include="$(OutDir)DocumentFormat.OpenXml.dll" Condition="Exists('$(OutDir)DocumentFormat.OpenXml.dll')" />
      <DllsToCopy Include="$(OutDir)ExcelNumberFormat.dll" Condition="Exists('$(OutDir)ExcelNumberFormat.dll')" />
      <DllsToCopy Include="$(OutDir)System.IO.Packaging.dll" Condition="Exists('$(OutDir)System.IO.Packaging.dll')" />
    </ItemGroup>
    <Copy SourceFiles="@(DllsToCopy)" DestinationFolder="$(OutDir)lib" SkipUnchangedFiles="true" />
  </Target>
  <!-- Copia del DLL a plugin con reintentos por si hay bloqueo momentÃ¡neo -->
  <Target Name="CopyPluginWithRetry" AfterTargets="Build">
    <ItemGroup>
      <BuiltDll Include="$(TargetPath)" />
    </ItemGroup>
    <Copy SourceFiles="@(BuiltDll)"
          DestinationFolder="$(OutputPath)"
          Retries="5"
          RetryDelayMilliseconds="1000"
          SkipUnchangedFiles="true" />
  </Target>
  <ItemGroup>
    <None Include="app.config" />
  </ItemGroup>
  <ItemGroup>
